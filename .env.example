APP_NAME=HimmahPlatform
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# إعدادات قاعدة البيانات
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=himmah_db
DB_USERNAME=root
DB_PASSWORD=

# إعدادات Wasabi (S3 Compatible)
WASABI_ACCESS_KEY_ID=your_wasabi_key
WASABI_SECRET_ACCESS_KEY=your_wasabi_secret
WASABI_DEFAULT_REGION=us-east-1
WASABI_BUCKET=your_bucket_name
WASABI_ENDPOINT=https://s3.wasabisys.com
WASABI_USE_PATH_STYLE_ENDPOINT=true
WASABI_VISIBILITY=public

# إعدادات Zoom API
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# إعدادات OpenAI (AI Assistant)
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo

# إعدادات Vimeo (اختياري للفيديوهات القديمة)
VIMEO_CLIENT=your_vimeo_client
VIMEO_SECRET=your_vimeo_secret
VIMEO_ACCESS=your_vimeo_access

# إعدادات البث (Real-time Chat)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your_pusher_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_APP_CLUSTER=mt1

# إعدادات البريد الإلكتروني
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

FILESYSTEM_DISK=wasabi
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_USE_TLS=true
PUSHER_VERIFY_SSL=true
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
